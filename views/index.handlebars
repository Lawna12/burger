<h1>Welcome to the Burger Boy Bucket Buster!!</h1>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2>Burgers waiting to be devoured!</h2>
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                {{> burgers/burgers-block}}
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
                <div class="col-md-6">
                    <h2>Burgers devoured by yours truly!</h2>
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                {{> burgers/burgers-block}}
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>

                <h2>Add a Burger to eat!</h2><br>
                <form action="" class="create-form">

                    <div class="form-group">
                        <label for="ca">Burger Name:</label>
                        <input type="text" id="ca" name="name">
                    </div>

                    <div class="form-group">
                        <label for="devour">Devoured?</label><br>
                        <input type="radio" name="devoured" value="0">No not Devoured <br>
                        <input type="radio" name="devoured" value="1" checked> Devoured! <br> 
                    </div>

                    <button type="submit">Add Burger</button>
                </form>